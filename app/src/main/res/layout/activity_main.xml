<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/layoutMatchParent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <android.support.v7.widget.CardView
        style="@style/LayoutWrapAndMatchParent">

        <RelativeLayout style="@style/ActionBar"
            android:background="@color/colorPrimary">
            <ImageView
                android:id="@+id/back_image"
                style="@style/ActionBarIconSize"
                android:padding="8dp"
                android:src="@drawable/back_arrow_white" />
            <TextView
                style="@style/layoutWrapContent"
                android:layout_centerInParent="true"
                android:text="Support"
                android:textColor="@color/color_white"
                android:textSize="18dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <LinearLayout
        android:onClick="startChat"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/start_chat_tv"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Start Chat"
            android:layout_height="match_parent"/>
        <ImageView
            style="@style/ActionBarIconSize"
            android:layout_gravity="center_vertical"
            android:padding="18dp"
            android:src="@drawable/right_arrow_small"/>
    </LinearLayout>
    <View
        style="@style/Divider"/>
    <LinearLayout
        android:onClick="chatHistory"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/chat_history_tv"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Chat History"
            android:layout_height="match_parent"/>
        <ImageView
            style="@style/ActionBarIconSize"
            android:layout_gravity="center_vertical"
            android:padding="18dp"
            android:src="@drawable/right_arrow_small"/>
    </LinearLayout>
    <View
       style="@style/Divider"/>
</LinearLayout>