<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatActivity">

    <android.support.v7.widget.CardView
        style="@style/LayoutWrapAndMatchParent">

        <RelativeLayout style="@style/ActionBar">

            <ImageView
                android:id="@+id/back_image"
                style="@style/ActionBarIconSize"
                android:padding="8dp"
                android:src="@drawable/back_arrow" />

            <ImageView
                android:id="@+id/close_image"
                style="@style/ActionBarIconWithRightAligned"
                android:padding="15dp"
                android:src="@drawable/cancel_image" />

            <TextView
                style="@style/layoutWrapContent"
                android:layout_centerInParent="true"
                android:text="New Conversation"
                android:textColor="@color/color_black"
                android:textSize="18dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        style="@style/LayoutWrapAndMatchParent"
        android:layout_alignParentBottom="true">

        <LinearLayout
            style="@style/ActionBar">

            <EditText
                android:id="@+id/message_et"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="Start a conversation "
                android:singleLine="true" />

            <ImageView
                android:id="@+id/choose_file_image"
                style="@style/ActionBarIconSize"
                android:layout_gravity="center_vertical"
                android:padding="10dp"
                android:src="@drawable/attach_img" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>