<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/layoutMatchParent"
    android:orientation="vertical"
    tools:context=".ConversationActivity">

    <android.support.v7.widget.CardView style="@style/LayoutWrapAndMatchParent">

        <RelativeLayout style="@style/ActionBar">

            <TextView
                style="@style/layoutWrapContent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="Conversation"
                android:textColor="@color/color_black"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/new_conversation_image"
                style="@style/ActionBarIconSize"
                android:layout_toLeftOf="@id/close_image"
                android:padding="13dp"
                android:src="@drawable/edit_image" />

            <ImageView
                android:id="@+id/close_image"
                style="@style/ActionBarIconWithRightAligned"
                android:padding="15dp"
                android:src="@drawable/cancel_image" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView style="@style/layoutMatchParent"></android.support.v7.widget.RecyclerView>
</LinearLayout>